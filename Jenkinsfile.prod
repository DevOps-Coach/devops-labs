pipeline {
    agent any

    parameters {
         string(name: 'tomcat_prod', defaultValue: '172.31.28.58', description: 'PROD Server')
    }

    triggers {
         pollSCM('* * * * *')
     }

stages{
        stage('CopyArtifact'){
            steps {
                copyArtifacts filter: '**/*.war', fingerprintArtifacts: true, projectName: 'spring', selector: lastSuccessful()
            }
            post {
                success {
                    echo 'WE ARE Start to Deployments...'
                }
            }
        }

        stage ('DeploymentsPROD'){

                    steps {
                        timeout(time:5, unit:'DAYS'){
                          input message: 'Approve PROD Deployment?'
                        }
                        sh "scp -i /home/ec2-user/mlabs.pem target/*.war ec2-user@${tomcat_prod}:/home/ec2-user/apache-tomcat-8.5.24/webapps/devops.war"

                    }
                    post {
                        success {
                            sh "curl http://${tomcat_prod}:8080/devops/"
                            echo 'WE ARE Finish PROD Deployments...'
                        }
                    }

        }
    }
}
